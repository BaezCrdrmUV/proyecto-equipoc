<Page x:Class="LiberMusic_Client.Paginas.ActualizarInformacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LiberMusic_Client.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActualizarInformacion">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel Grid.Row="0">
            <TextBlock Text="Ingresa tus datos para &#x0a; Actualizar" FontSize="22" Style="{StaticResource TituloPaginasStyle}" TextAlignment="Center" Margin="0,25,0,0" />
        </StackPanel>
        <StackPanel Width="500" Margin="0,100,0,280">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Nombre" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <TextBox Template="{StaticResource InputControlTemplate}" x:Name="txtNombre"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>




        <StackPanel Width="500" Margin="0,140,0,260">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Pais" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <TextBox Template="{StaticResource InputControlTemplate}" x:Name="txtPais"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>

        <StackPanel Width="500" Margin="0,180,0,230">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Nombre de usuario" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <TextBox Template="{StaticResource InputControlTemplate}" Cursor="Hand" x:Name="txtNombreUsuario"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>

        <StackPanel Width="500" Margin="0,220,0,190">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Correo" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <TextBox Template="{StaticResource InputControlTemplate}" x:Name="Correo"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>

        <StackPanel Width="500" Margin="0,255,0,150">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Contrasenia" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <PasswordBox Template="{StaticResource PasswordControlTemplate}" x:Name="Password"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>

        <StackPanel Width="500" Margin="0,290,0,110">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Repita su contraseia" Style="{StaticResource TituloCamposStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <PasswordBox Template="{StaticResource PasswordControlTemplate}" x:Name="PasswordRepite" Cursor="Hand"/>
                    </StackPanel>


                </Grid>
            </Grid>

        </StackPanel>
        <StackPanel Width="450" Margin="0,330,0,0">
            <Grid>
                <StackPanel Grid.Row="0">
                    <Button Content="Actualizar" Style="{StaticResource BotonPrincipalStyle}" Click="Actualizar" Cursor="Hand">

                    </Button>

                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
