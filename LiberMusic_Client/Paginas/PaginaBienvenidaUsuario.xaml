<Page x:Class="LiberMusic_Client.Paginas.PaginaBienvenidaUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LiberMusic_Client.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaBienvenidaUsuario">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel Margin="50,100,50,0">
            <TextBlock Margin="25,0,25,0" Text="Bienvenido" Style="{StaticResource TituloPaginasStyle}" HorizontalAlignment="Center">
                
            </TextBlock>
            <TextBlock Margin="25,0,25,0" Text="{Binding nombreDelPropietario}" Style="{StaticResource TituloPaginasStyle}" HorizontalAlignment="Center">

            </TextBlock>
            <TextBlock Margin="25,0,25,0" Text="Seleccione cualquier opción para continuar" Style="{StaticResource TituloStyle}" HorizontalAlignment="Center">

            </TextBlock>
            <Image Source="/Recursos/Imagenes/Bienvenida.jpg" Width="250">
            </Image>
        </StackPanel>
        
    </Grid>
</Page>
